@model IEnumerable<CouriersManagementDb.Models.Courier>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DriverName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DriverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriverNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourierID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CourierID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CourierID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
